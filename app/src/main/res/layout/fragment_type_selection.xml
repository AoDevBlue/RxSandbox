<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/type_selection_observable_card"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#0288D1"
        app:layout_constraintBottom_toTopOf="@+id/type_selection_single_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/type_selection_observable_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_observable"/>

            <TextView
                android:id="@+id/type_selection_observable_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="@string/type_selection_observable"
                android:textColor="@color/text_primary_inverse"
                android:textSize="24sp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/type_selection_single_card"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#43A047"
        app:layout_constraintBottom_toTopOf="@+id/type_selection_maybe_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type_selection_observable_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/type_selection_single_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_single"/>

            <TextView
                android:id="@+id/type_selection_single_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="@string/type_selection_single"
                android:textColor="@color/text_primary_inverse"
                android:textSize="24sp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/type_selection_maybe_card"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#EF6C00"
        app:layout_constraintBottom_toTopOf="@+id/type_selection_completable_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type_selection_single_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/type_selection_maybe_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_maybe"/>

            <TextView
                android:id="@+id/type_selection_maybe_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="@string/type_selection_maybe"
                android:textColor="@color/text_primary_inverse"
                android:textSize="24sp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/type_selection_completable_card"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#8E24AA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type_selection_maybe_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/type_selection_completable_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_completable"/>

            <TextView
                android:id="@+id/type_selection_completable_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="@string/type_selection_completable"
                android:textColor="@color/text_primary_inverse"
                android:textSize="24sp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>